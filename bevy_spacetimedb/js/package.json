{
  "name": "bevy-spacetimedb-bridge",
  "version": "0.1.0",
  "description": "TypeScript bridge for bevy_spacetimedb_wasm",
  "type": "module",
  "exports": {
    ".": {
      "browser": "./dist/spacetimedb-bridge.bundle.js",
      "types": "./dist/spacetimedb-bridge.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/spacetimedb-bridge.js --bundle --format=esm --outfile=dist/spacetimedb-bridge.bundle.js --platform=browser",
    "watch": "tsc --watch",
    "test:bundle": "node test-bundle.js"
  },
  "dependencies": {
    "@clockworklabs/spacetimedb-sdk": "1.3.3"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  }
}
